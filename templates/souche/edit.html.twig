{# templates/souche/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier la Souche
{% endblock %}

{% block body %}
	<h1>Modifier la Souche:
		{{ souche.nom }}</h1>

	{# Affichez un message de succès si le formulaire a été soumis avec succès #}
	{% if app.session.flashBag.has('success') %}
		<div class="alert alert-success">
			{{ app.session.flashBag.get('success')[0] }}
		</div>
	{% endif %}

	{# Affichage du formulaire #}
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button class="btn btn-primary">Sauvegarder les modifications</button>
	{{ form_end(form) }}

	<a href="{{ path('app_souche') }}" class="btn btn-secondary">Retour à la liste des souches</a>
{% endblock %}
